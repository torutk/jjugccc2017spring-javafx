<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="root" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tinygadget.TinyGadgetViewController">
   <children>
      <Circle fx:id="circle" radius="100.0" stroke="BLACK" strokeType="INSIDE">
         <fill>
            <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
               <stops>
                  <Stop color="WHITE" />
                  <Stop color="#52f88c" offset="1.0" />
               </stops>
            </RadialGradient>
         </fill>
      </Circle>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hello JavaFX">
         <font>
            <Font size="36.0" />
         </font>
      </Text>
   </children>
</StackPane>
